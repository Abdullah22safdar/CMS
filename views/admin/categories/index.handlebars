<div class="row">
    <div class="col-md-4">
        <h2>Create Categories</h2>
        <form action="/admin/categories/create" method="post">

            <div class="form-group">
                <label>Name</label>
                <input name="name" id="name" type="text" class="form-control" placeholder="Enter title">
            </div>

            <button class="btn btn-primary" type="submit">Create Category</button>
        </form>
    </div>
    <div class="col-md-8">
        <h2>Categories</h2>
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
            </thead>

            <tbody>
            {{#each categories}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{dateFormat date 'MMMM do YYYY'}}</td>
                <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info" >Edit</a>

                    <hr>
                    <form action="/admin/categories/delete/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>

    </div>
</div>